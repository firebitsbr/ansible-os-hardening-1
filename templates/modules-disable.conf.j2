# This file lists those modules which we want to be disabled as recommended
# by CIS benchmark

# Filesystem modules
{% for module in os_hardening_fs_modules_disable %}
{% if module.cis_id not in os_hardening_exclusions %}
install {{ module.name }} /bin/true
{% endif %}
{% endfor %}
# Network Protocols modules
{% for module in os_hardening_net_modules_disable %}
{% if module.cis_id not in os_hardening_exclusions %}
install {{ module.name }} /bin/true
{% endif %}
{% endfor %}
